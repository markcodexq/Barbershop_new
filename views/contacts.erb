<h2>Контакты</h2>

<form action="/contacts" method="POST">
  <div class="mb-3">
    <label for="email_c" class="form-label">User Email</label>
    <input name="email_c" value="<%= @email %>" type="email" class="form-control" id="email_c" placeholder="Enter your email" >
  </div>

  <div class="form-floating">
    <label for="message_c" class="form-label">Message</label>
    <textarea name="message_c" class="form-control" placeholder="Leave a message here" id="message_c" style="height: 100px"><%= @message %></textarea>
  </div>

  <button type="submit" class="btn btn-primary">Submit</button>
</form>
