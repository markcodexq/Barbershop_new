<h2>Записаться</h2>
<p>На это странице вы можете записаться на стрижку</p>

<form action="/visit" method="POST">
  <div class="mb-3">
    <label for="user_n" class="form-label">User name</label>
    <input name="user_name" value="<%= @user_name %>" type="login" class="form-control" id="user_n" placeholder="Enter your name" >
  </div>

  <div class="mb-3">
    <label for="phone_n" class="form-label">Phone number</label>
    <input name="phone" value="<%= @phone %>" type="phone" class="form-control" id="phone_n" placeholder="+1()" >
  </div>

  <div class="mb-3">
    <label for="date" class="form-label">Date Time</label>
    <input name="date" value="<%= @date %>" type="date" class="form-control" id="date">
  </div>
  <div class="mb-3">
    <label for="selected_m" class="form-label">Choice the master</label>
    <select id="selected_m" class="form-select" name="selected" aria-label="Default select example">
      <option value="Walter White">Walter White</option>
      <option value="Jessie Pinkman">Jessie Pinkman</option>
      <option value="Gus Fring">Gus Fring</option>
    </select>
  </div>
  <div class="form-group">
  <label>Which color do you want to change</label>
  <select name="colorpicker" id="color">
    <option value="#7bd148">Green</option>
    <option value="#5484ed">Bold blue</option>
    <option value="#a4bdfc">Blue</option>
    <option value="#46d6db">Turquoise</option>
    <option value="#7ae7bf">Light green</option>
    <option value="#51b749">Bold green</option>
    <option value="#fbd75b">Yellow</option>
    <option value="#ffb878">Orange</option>
    <option value="#ff887c">Red</option>
    <option value="#dc2127">Bold red</option>
    <option value="#dbadff">Purple</option>
    <option value="#e1e1e1">Gray</option>
  </select>
  </div>
  <button type="submit" class="btn btn-primary">Enroll</button>

</form>
<!-- Выполняется после загрузки страницы в разделе function -->
<script type="text/javascript">
  $(function() {
    $('#color').simplecolorpicker();
  });
</script>
